<!DOCTYPE html>
<html>
  <head>
    <title>TweetApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"> 
  </head>
  <body>
    <div class="header-top">
      <header>
         <div class="header-logo">
           <%= link_to("TweetApp", "/") %>
         </div>
           <ul class="header-menus" style="list-style:none;">
             <%current_user=User.find_by(id: session[:user_id])%>
               <%if current_user%>       <!--ログイン状態で表示-->
           <li>
             <%= link_to(current_user.name,"/users/#{current_user.id}",class:"button")%>
             <ul>
               <li>
                 <%= link_to("new","/posts/new",class:"button")%>
               </li>
               <li>
                   <%=link_to("logout","/logout",{method: :post})%>
               </li>
             </ul>
           </li> 
           <li>
              <%= link_to("index","#",class:"button")%>
             <ul>
               <li>
                 <%= link_to("post","/posts/index",class:"button")%>
               </li>
               <li>
                 <%= link_to("users","/users/index",class:"button")%>
               </li>
             </ul>
           </li> 
             
             <% else %>                         <!--ログアウト状態で表示-->
           <li>
             <%= link_to("login","/login",class:"button")%>
           </li>
           <li>
             <%= link_to("about","/about",class:"button")%>
           </li>
           <li>
             <%= link_to("new","/signup",class:"button")%>
           </li>
             <%end%>
           </ul>
    </div>
      </header>
        <div class="flash"> 
          <%if flash[:notice]%>
            <%=flash[:notice]%><br>
          <%end%>
        </div>
  
          <%= yield %>

         <footer class="footer">
           <nav class="nav">
              <ul>
                <li>TweetAppについて</li>
                <li>お問い合わせ</li>
                <li>利用規約</a></li>
              </ul>
          </nav>
            <div class="link">© 2019 tweetapp
           </div>
        </footer>
  </body>
</html>