<div class="main">
  <div class="serch">
    <div class="serch-form">
      <div class="serch-main">
    <p font-size="10px">検索</p>
      <%= form_tag("/posts/search",:method => 'get') do %>
        <%= text_field_tag :search,"",:placeholder => "投稿内容を検索してください" %><br><br>
        <%= submit_tag 'Search', :name => nil ,class: "button1" %><br><br>
      <% end %>  
     <div class="tag">
      <ul class="ultag">
       <%- @tags.each do |tag| %>
      <li>  <%=link_to "#{tag.name}", posts_index_path(:tagsearch =>  tag.name).gsub("+", "%20") %></li>
   <%#= link_to tag_path(tag.id) do %>
     <%#= tag.taggings.count %>  
     <% end %>
     </ul>
     </div>
      </div>
    </div>
  </div>
  
  
  
  <% @posts.each do |post|%>
    <div class="post-index-back">
      <div class="post-index-cover">
        <div class="post-main">
          <div class="post-main-box">
            
            <% if post.user.present? %>
            
            <div class="post-index-img-cover">
              <div class="post-index-img">
                <%= image_tag post.user.img.url, :class => "user-image" %>
              </div>
              </div>
                <div class="post-index-inner">
                  <div class="post-main-detail">
                    <%=link_to(post.user.name, "/users/#{post.user.id}", class: "post-index-name")%>
                    <%= post.created_at.strftime("%Y/%m/%d(#{%w(日 月 火 水 木 金 土)[post.created_at.wday]})")  %>
                  </div>
                    <div class="post-index-content"><%=simple_format(post.content)%></div>
                   
                    <% if post.postimage.present? %>
         <!--画像--><%= image_tag post.postimage.url,:class => "post-image"%>
                   <%end%>
                  <div class="post-index-action">
            
            <ul class="ultag">
                   
                    
                     <%if post.user_id==@current_user.id%>
                       <%=link_to("/posts/#{post.id}/edit",class:"tagf")do%>
                   <li>    <i class="fas fa-edit"></i></li>
                        <%end%>
                       <%=link_to("/posts/#{post.id}/destroy",{method: "post",class:" tagf"}) do%>
                   <li>    <i class="far fa-trash-alt"></i></li>
                        <%end%>
                     <%end%>
                     <%=link_to(new_return_path(p_id: post.id),class:"tagf")do%>
                   <li>  <i class="fas fa-reply"></i></li>
                      <%end%>
                     <% if Like.find_by(user_id: @current_user.id,post_id: post.id)%>
                       <%= link_to("/likes/#{post.id}/destroy",{method: "post",class:"tagf"}, remote: true) do %>
         <!--いいね--><li> <i class="fas fa-heart "></i></li>
                     <%end%>
                     <%else%>
                       <%= link_to("/likes/#{post.id}/create", {method: "post",class:"tagf"},:select_id => "a") do %>
                      <li> <i class="far fa-heart "></i></li>
                      <%end%>
                    <%end%>
               <div class="tagf">   <li>     <%= post.like_count %>   </li> </div>   
                   
      <!--タグ-->    <% post.tags.each do |tag| %>
                
  <li>    <%=link_to "#{tag.name}", posts_index_path(:tagsearch =>  tag.name).gsub("+", "%20"),class:"tagf" %>    </li>
                  <% end %>
                     
                   
                    </ul>
                    
                     
                    
              <% end %>
         </div>
       </div>
     </div>
    </div>
  </div>
  
  
  <!---------------     返信     --------------------->
 
 <%unless post.returns == nil%>
 <div class="line-cover">
   <div class="line"></div>
   </div>
 <div class="return-index-back">
      <div class="post-index-cover">
        <div class="post-main">
          <div class="post-main-box">
            <%end%>
           <%@returns.each do |r|%> 
           <%if r.post_id == post.id%>
            <%if r.user.present?%>
             <div class="post-index-return-img-cover">
               <div class="post-index-return-cover-aug">
              <div class="post-index-return-img">
                 
                <%= image_tag r.user.img.url, :class => "return-user-image" %>
               
              </div>
             
            <div class="post-index-return-name">
        <%=link_to(r.user.name, "/users/#{r.user.id}", class: "post-index-name")%><br>
           <%end%> </div><br>
      <div class="post-index-return-content">  <%=r.returncontent%></div>
      </div>
      <%=link_to(edit_return_path(r.id),class:"return-edit")do%>
       <i class="fas fa-edit"></i>
          <%end%>
        <%=link_to("/returns/#{r.id}/destroy",{method: "post",class:"return-edit"})do%>
        <i class="far fa-trash-alt"></i>
                        <%end%>
    </div>
      <%end%>
      
  <%end%>
   
       </div>
     </div>
    </div>
  </div>
  <div class="yohaku"></div>
   <!--------------------------------------------->
 
   <%end%>
</div> 

