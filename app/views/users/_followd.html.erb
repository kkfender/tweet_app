<div class="follow-container">
  <% @users.followers.each do |f|%>
    <div class="user-profile">
      <div class="user-list-image">
       <%= image_tag f.img.url,:class => "user-image" %>
          <%if @current_user.following? (f)%>
            <div class="back-message">フォローしています
            </div>
          <%end%>
          </div>
          <div class="prof"> 
            <%=link_to(f.name,"/users/#{f.id}",class:"show-index")%>
          </div>
           <div class="user-profile-page">
             <div class="show-profile"> <%=f.profile%></div>
           </div> 
    </div>
          <%end%>
</div>