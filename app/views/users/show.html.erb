
 <div class="prof-show-container">
  <div class="prof-show-detail">
   <div class="show-image">
      <img src="<%= "/user_images/#{@users.image_name}" %>">
      </div>
<div class="show-users-identfy">
  
  
 <div class="user-main-prof"> 
  <%= "#{@users.name}" %>
    <%if @current_user==@users%>
    <%elsif @current_user.following? @users%>  <!--もしおろーしてたら-->
      <%=@users.name%>をフォローしています
    <%end%>
      <%= link_to("編集", "/users/#{@users.id}/edit",class:"edit") %>
  

  <ul class="show-menus">
   <li>フォロー</li>
      <li><%=@users.follow_count%>人</li>
       <% @users.all_following.each do |follow|%>
      <%end%>
   <li>フォロワー </li>
   <li><%=@users.followers_count%>人</li>
    <%=render"users/follow"%>     <!--followのパーシャル-->
  </ul>
 
 </div>
 
  <% @users.followers .each do |follow|%>
   <%end%>
  </div>
   </div>
   
</div>
 <div class="main-container">   <!--main-->
  <div class="mc-list">         <!--↓-->
     <ul>
      <li><%= link_to("つぶやき",:action=>"show", :select_id => "1") %></li>
      <li><%= link_to("フォロー",:action=>"show", :select_id => "2") %></li>
      <li><%= link_to("フォロワー",:action=>"show", :select_id => "3") %></li>
     </ul>
  </div>
  

<% if @branch ==( "1" or nil) %>    <!--パ－シャルの切り替え-->
   <%=render"users/tweet"%>     <!--tweetのパーシャル-->
  <%elsif @branch == "2"%> 
   <%=render"users/follows"%>
  <%else%> 
  <%=render"users/followd"%>
   <%end%>
   </div>
